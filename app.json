{
  "expo": {
    "name": "Sociedad Valiente",
    "slug": "App-Somos-Valientes",
    "scheme": "appsomosvalientes",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,

    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ccff34"
    },

    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.AppSomosValientes",
      "buildNumber": "5",
      "infoPlist": {
        "CFBundleDisplayName": "Sociedad Valiente",
        "ITSAppUsesNonExemptEncryption": false
      }
    },

    "android": {
      "package": "com.anonymous.AppSomosValientes",
      "googleServicesFile": "./google-services.json",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#ccff34"
      },
      "versionCode": 5,
      "edgeToEdgeEnabled": true
    },

    "web": {
      "favicon": "./assets/favicon.png"
    },

    "extra": {
      "eas": {
        "projectId": "be4a657c-b7f9-4daa-b793-80141d53e52d"
      }
    },

    "plugins": [
      "expo-font",
      "@react-native-community/datetimepicker"
    ]
  }
}
